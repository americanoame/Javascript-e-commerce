{
  "name": "javascript-e-commerce",
  "version": "1.0.0",
  "description": "eCommerce app build with MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d"
  },
  "author": "andre silva",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.11.0",
    "mongoose": "^8.8.2",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.7"
  }
}


